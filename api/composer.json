{
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/lsst-epo/craft-next-js-builds.git"
    },
    {
      "type": "vcs",
      "url": "https://github.com/lsst-epo/canto-dam-assets.git"
    },
    {
      "type": "composer",
      "url": "https://composer.craftcms.com",
      "canonical": false
    }
  ],
  "require": {
    "craftcms/cms": "^4.0.0",
    "craftcms/google-cloud": "2.1.0",
    "craftcms/redactor": "3.0.4",
    "google/cloud-storage": "^1.24",
    "lsst-epo/canto-dam-assets": "^4.3",
    "lsst-epo/craft-next-js-builds": "2.0.0",
    "vlucas/phpdotenv": "^3.4.0",
    "yiisoft/yii2-redis": "^2.0"
  },
  "require-dev": {
    "yiisoft/yii2-shell": "^2.0.3"
  },
  "autoload": {
    "psr-4": {
      "modules\\": "modules/",
      "rosas\\": "modules/eric"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "8.1.10"
    },
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  }
}
